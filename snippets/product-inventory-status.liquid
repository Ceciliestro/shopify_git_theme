{% assign show_inventory_quantity 	= block.settings.show_inventory_quantity %}
{% assign show_background		 	= block.settings.show_background %}
{% assign background_opacity		= block.settings.background_opacity | divided_by: 100.0 %}
{% assign current_variant           = product.selected_or_first_available_variant %}

{%- capture styles -%}
	--high-stock-color: {{ block.settings.inv_high_stock_color }}; {{- -}}
	--high-stock-background: {{ block.settings.inv_high_stock_background | color_modify: 'alpha', background_opacity }}; {{- -}}
	--low-stock-color: {{ block.settings.inv_low_stock_color }}; {{- -}}
	--low-stock-background: {{ block.settings.inv_low_stock_background | color_modify: 'alpha', background_opacity }}; {{- -}}
	--offset-top-desktop: {{ block.settings.offset_top_desktop }}px; {{- -}}
	--offset-bottom-desktop: {{ block.settings.offset_bottom_desktop }}px; {{- -}}
	--offset-top-mobile: {{ block.settings.offset_top_mobile }}px; {{- -}}
	--offset-bottom-mobile: {{ block.settings.offset_bottom_mobile }}px;
{%- endcapture -%}

{% if block.settings.inv_low_stock_text != blank and block.settings.inv_high_stock_text != blank %}
	<div class="product-inventory-status {% unless current_variant.available %}is-hidden{% endunless %} js-product-inventory-wrapper" style="{{ styles }}">
		{% assign low_stock_icon 		= block.settings.inv_low_stock_icon %}
		{% assign high_stock_icon 		= block.settings.inv_high_stock_icon %}
		{% assign low_stock_threshold 	= block.settings.low_stock_threshold %}
		{% assign can_sell_after_zero 	= false %}

		{% if current_variant.inventory_policy == "continue" or current_variant.inventory_management == nil %}
			{% assign can_sell_after_zero = true %}
		{% endif %}

		<p class="product-inventory-status__text product-inventory-status__text--low{% if show_background %} product-inventory-status__text--bg{% endif %} js-product-low-stock-msg {% if current_variant.inventory_quantity > low_stock_threshold or current_variant.available == false or can_sell_after_zero %}is-hidden{% endif %}">
			{% if low_stock_icon != blank %}
				<img class="product-inventory-status__icon"
					 src="{{ low_stock_icon | image_url: width: 24, height: 24 }}"
					 srcset="{{ low_stock_icon | image_url: width: 24, height: 24 }} 1, {{ low_stock_icon | image_url: width: 48, height: 48 }}"
					 aria-hidden="true"
					 alt=""
				>
			{% endif %}

			{% if show_inventory_quantity %}
				<span class="product-inventory-status__quantity js-product-inventory-status-quantity{% if current_variant.inventory_quantity <= 0 %} is-hidden{% endif %}">
					{{- current_variant.inventory_quantity -}}
				</span>
			{% endif %}

			{{- block.settings.inv_low_stock_text -}}
		</p>

		<p class="product-inventory-status__text product-inventory-status__text--high{% if show_background %} product-inventory-status__text--bg{% endif %} js-product-high-stock-msg {% if current_variant.inventory_quantity <= low_stock_threshold and can_sell_after_zero == false or current_variant.available == false %}is-hidden{% endif %}">
			{% if high_stock_icon != blank %}
				<img class="product-inventory-status__icon"
					 src="{{ high_stock_icon | image_url: width: 24, height: 24 }}"
					 srcset="{{ high_stock_icon | image_url: width: 24, height: 24 }} 1, {{ high_stock_icon | image_url: width: 48, height: 48 }}"
					 aria-hidden="true"
					 alt=""
				>
			{% endif %}

			{% if show_inventory_quantity %}
				<span class="product-inventory-status__quantity js-product-inventory-status-quantity{% if current_variant.inventory_quantity <= 0 %} is-hidden{% endif %}">
					{{- current_variant.inventory_quantity -}}
				</span>
			{% endif %}

			{{- block.settings.inv_high_stock_text -}}
		</p>
	</div>
{% endif %}
